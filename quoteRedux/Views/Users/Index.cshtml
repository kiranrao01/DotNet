@{
    ViewData["Title"] = "Home Page";
}
<div>
    <h1>Register</h1>
    <form action = "register" method="POST">
        First Name:<input type="text" name = "fname">
        Last Name:<input type = "text" name = "lname">
        Email:<input type="text" name = "email">
        Password (at least 8 characters):<input type="password" name = "pass">
        Confirm Password:<input type="password" name = "confpass">
        <input type="submit" value="Register">
    </form>
</div>
<div class="error">
    @{
        foreach(var error in ViewBag.errorlist)
        {
            for(int i = 0; i < error.Errors.Count; i++){
                <p>@error.Errors[i].ErrorMessage</p>
            }
        }
    }
    
    <p>@ViewBag.confirm</p>
    <p>@ViewBag.prevemail</p>
</div>
<div>
    <h1>Log-in</h1>
    <form action = "login" method="POST">
        Email:<input type="text" name="email">
        Password:<input type="password" name = "pass">
        <input type="submit" value="Log-in">
    </form>
    <div class = "error">
        <p>@ViewBag.wrongmail</p>
        <p>@ViewBag.wrongpass</p>
    </div>
</div>
